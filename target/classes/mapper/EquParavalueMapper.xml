<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jan.wat.mapper.EquParavalueMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jan.wat.pojo.EquParavalue">
        <id column="ID" property="id" />
        <result column="Para_ID" property="paraId" />
        <result column="Name" property="name" />
    </resultMap>

    <resultMap id="EquQuery" type="com.jan.wat.pojo.vo.EquParavalueQuery">
        <result column="para_id" property="para_id"/>
        <result column="para_name" property="para_name"/>
        <result column="paravalue_id" property="paravalue_id"/>
    </resultMap>

    <select id="selectByPage" resultMap="EquQuery">
        select
            pv.para_id as para_id,
            pv.name as para_name,
            pv.id as paravalue_id,
            p.Name as name
        from equ_paravalue pv, equ_para p
        where pv.Para_ID = p.ID and pv.Para_ID=#{para_id}
    </select>

</mapper>
